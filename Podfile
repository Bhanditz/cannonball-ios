# Uncomment the next line to define a global platform for your project
platform :ios, '9.0'

use_frameworks!

def cannonball_pods
    use_frameworks!

    # Pods for Cannonball
    pod 'Fabric', '~> 1.6.7'
    pod 'Crashlytics', '~> 3.7.0'
    pod 'TwitterKit', '~> 2.0.2'
    pod 'TwitterCore', '~> 2.0.2'
    pod 'Digits', '~> 2.0.2'

end

target 'Cannonball Dev' do
    cannonball_pods
end

target 'Cannonball Prod' do
    cannonball_pods
end
